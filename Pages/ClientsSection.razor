@page "/clients-section"
@inherits LayoutComponentBase
@inject NavigationManager Navigation


<style>
    .title-page {
        font-weight: 600;
        font-size: 1.25rem;
        line-height: 1.75rem;
    }
    .avatar-icon {
        width: 40px;
        height: 40px;
        background-color: #e3f2fd;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-line {
        display: flex;
        align-items: center;
        color: #555;
        font-size: 0.875rem;
        margin-bottom: 4px;
    }

    .info-icon {
        font-size: 1rem;
        margin-right: 8px;
    }

</style>

<MudContainer Class="mt-4 p-0">
    <MudGrid Class="mb-4">
        <MudItem xs="6">
            <MudText Typo="Typo.h5" Class="title-page">Clients</MudText>
        </MudItem>
        <MudItem xs="6" Class="text-end">
            <span class="text-primary" style="cursor:pointer;" @onclick="@GoToDashboard">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
                </svg>
                Back to Dashboard
            </span>
        </MudItem>
    </MudGrid>

    <MudItem Class="text-end mb-4">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Medium" OnClick="@ToggleAddForm">
            <MudIcon Icon="@Icons.Material.Outlined.Add" Class="me-2" />
            Add Client
        </MudButton>
    </MudItem>

    @if (ShowAddForm)
    {
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">Add New Client</MudText>
            </MudCardHeader>
            <MudCardContent Class="space-y-4">
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="newClient.Name" Label="Name" Placeholder="Client name" Required="true" dornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.LocationOn"
                                      Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="newClient.Email" Label="Email" Placeholder="client@email.com" InputType="InputType.Email" Required="true" dornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.LocationOn"
                                      Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="newClient.Phone" Label="Phone" Placeholder="(555) 123-4567" InputType="InputType.Telephone" Required="true" dornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.LocationOn"
                                      Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="newClient.Address" Label="Address" Placeholder="Property address" InputType="InputType.Email" Required="true" dornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.LocationOn"
                                      Variant="Variant.Outlined" />
                    </MudItem>
                </MudGrid>
                <div class="d-flex gap-2 mt-3 justify-content-end pt-3 pb-2">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Medium">Save Client</MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Size="Size.Medium" OnClick="@ToggleAddForm">Cancel</MudButton>
                </div>
            </MudCardContent>
        </MudCard>
    }

    <MudGrid Class="mt-2">
        @foreach (var client in Clients)
        {
            <MudItem xs="12">
                <MudCard>
                    <MudCardContent Class="p-4">
                        <div class="d-flex justify-between align-start">
                            <div class="d-flex align-center gap-3">
                                <div class="avatar-icon">
                                    <MudIcon Icon="@Icons.Material.Outlined.Person" Color="Color.Primary" />
                                </div>
                                <div>
                                    <MudText Typo="Typo.subtitle1">@client.Name</MudText>
                                    <MudText Typo="Typo.caption">@client.Inspections inspections</MudText>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 space-y-1">
                            <div class="info-line">
                                <MudIcon Icon="@Icons.Material.Outlined.Email" Class="info-icon" />
                                @client.Email
                            </div>
                            <div class="info-line">
                                <MudIcon Icon="@Icons.Material.Outlined.Phone" Class="info-icon" />
                                @client.Phone
                            </div>
                            <div class="info-line">
                                <MudIcon Icon="@Icons.Material.Outlined.Place" Class="info-icon" />
                                @client.Address
                            </div>
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code {
    private void GoToDashboard()
    {
        Navigation.NavigateTo("/");
    }
    private bool ShowAddForm { get; set; } = false;

    private List<Client> Clients = new()
    {
        new Client
        {
            Id = "1",
            Name = "John Smith",
            Email = "john@email.com",
            Phone = "(555) 123-4567",
            Address = "123 Main St, City, ST",
            Inspections = 3
        },
        new Client
        {
            Id = "2",
            Name = "Sarah Johnson",
            Email = "sarah@email.com",
            Phone = "(555) 987-6543",
            Address = "456 Oak Ave, City, ST",
            Inspections = 1
        }
    };

    private Client newClient = new();

    private void ToggleAddForm()
    {
        ShowAddForm = !ShowAddForm;
        if (ShowAddForm)
            newClient = new(); // Reset form when opening
    }

    public class Client
    {
        public string Id { get; set; }
        public string Name { get; set; }
        public string Email { get; set; }
        public string Phone { get; set; }
        public string Address { get; set; }
        public int Inspections { get; set; }
    }
}

