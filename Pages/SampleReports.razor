@page "/sample-reports"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-5 px-3 px-md-5 py-4">
    <MudText Typo="Typo.h4" Class="fw-bold mb-4">Explore sample reports</MudText>
    <MudGrid Gutter="GutterSize.Small">
        @foreach (var report in sampleReports)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudCard Class="h-100 shadow-sm">
                    <MudCardMedia Image="@report.ImageUrl" Height="180" Class="rounded-top" />
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Class="fw-semibold mb-1">@report.Title</MudText>
                        <MudText Typo="Typo.body2">@report.Location</MudText>
                        <MudText Typo="Typo.body2">@report.Pages pages</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

