@page "/new-inspection-page"
@inject NavigationManager Navigation

<style>
    .title-page {
        font-weight: 600;
        font-size: 1.25rem;
        line-height: 1.75rem;
    }
</style>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4 p-0">
    <MudGrid Class="mb-4">
        <MudItem xs="6">
            <MudText Typo="Typo.h5" Class="title-page">New Inspection</MudText>
        </MudItem>
        <MudItem xs="6" Class="text-end">
            <span class="text-primary" style="cursor:pointer;" @onclick="@GoToDashboard">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
                </svg>
                Back to Dashboard
            </span>
        </MudItem>
    </MudGrid>

    @*Inspection Form*@
    <MudCard Class="inspection-form mt-5">
        <MudCardHeader>
            <MudText Typo="Typo.h6" Class="d-flex align-items-center gap-2">
                <MudIcon Icon="@Icons.Material.Filled.Description" Size="Size.Medium" />
                Inspection Details
            </MudText>
        </MudCardHeader>

        <MudCardContent>
            <EditForm Model="@formData" OnValidSubmit="HandleValidSubmit">
                <MudGrid Class="mb-4">
                    <MudItem xs="12" md="6">
                        <MudTextField Label="Property Address" @bind-Value="formData.PropertyAddress" Required="true"
                                      Placeholder="123 Main St, City, State"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.LocationOn"
                                      Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField Label="Client Name" @bind-Value="formData.ClientName" Required="true"
                                      Placeholder="John Doe"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Person"
                                      Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudDatePicker Label="Inspection Date"
                                       @bind-Date="formData.InspectionDate"
                                       Required="true"
                                       Variant="Variant.Outlined"
                                       Adornment="Adornment.Start"
                                       AdornmentIcon="@Icons.Material.Filled.DateRange"
                                       DateFormat="yyyy-MM-dd" />

                    </MudItem>
                    <MudItem xs="12" md="6">
                        @*Selects Inspection Type*@
                        <MudSelect @bind-Value="formData.InspectionType" Label="Inspection Type" Placeholder="Please Select" AdornmentIcon="@Icons.Material.Outlined.ArrowDropDown" AdornmentColor="Color.Primary" Variant="Variant.Outlined">
                            <MudSelectItem Value="@("GHInspection")">General Home Inspection</MudSelectItem>
                            <MudSelectItem Value="@("PPInspection")">Pre-Purchase Inspection</MudSelectItem>
                            <MudSelectItem Value="@("PPInspection")">Pre-Purchase Inspection</MudSelectItem>
                            <MudSelectItem Value="@("WInspection")">Warranty Inspection</MudSelectItem>
                            <MudSelectItem Value="@("SInspection")">Special Inspection</MudSelectItem>
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField Label="General Notes" @bind-Value="formData.Notes"
                                      Placeholder="General observations and notes..."
                                      Lines="3"
                                      Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField Label="Key Findings" @bind-Value="formData.Findings"
                                      Placeholder="List any significant findings or issues..."
                                      Lines="4"
                                      Variant="Variant.Outlined" />
                    </MudItem>
                </MudGrid>

                <MudButton Type="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled" Class="w-100">
                    Save Inspection
                </MudButton>
            </EditForm>
        </MudCardContent>
    </MudCard>

</MudContainer>

@code {
    [Parameter] public EventCallback<InspectionData> OnSubmit { get; set; }
    [Parameter] public InspectionData InitialData { get; set; } = new();

    private InspectionData formData = new()
    {
        InspectionDate = DateTime.Today // or DateTime.Now
    };

    protected override void OnInitialized()
    {
        if (InitialData is not null)
        {
            formData = new InspectionData
            {
                PropertyAddress = InitialData.PropertyAddress ?? "",
                ClientName = InitialData.ClientName ?? "",
                InspectionDate = InitialData.InspectionDate,
                InspectionType = InitialData.InspectionType ?? "",
                Notes = InitialData.Notes ?? "",
                Findings = InitialData.Findings ?? ""
            };
        }
    }

    private async Task HandleValidSubmit()
    {
        await OnSubmit.InvokeAsync(formData);
    }

    private void GoToDashboard()
    {
        Navigation.NavigateTo("/");
    }

    public class InspectionData
    {
        public string PropertyAddress { get; set; } = "";
        public string ClientName { get; set; } = "";
        public DateTime? InspectionDate { get; set; }
        public string InspectionType { get; set; } = "";
        public string Notes { get; set; } = "";
        public string Findings { get; set; } = "";
    }
}
