@page "/"
@inject NavigationManager Navigation

<MudContainer MaxWidth="MaxWidth.Medium" Class="mx-auto pa-0">

    <MudText Align="Align.Center" Typo="Typo.h3" Class="title">Welcome to InspTor</MudText>
    <MudText Align="Align.Center" Typo="Typo.subtitle2" Class="subtitle">Your professional home inspection companion</MudText>

    @*BUTTONS*@
    <MudGrid Class="mt-4">
        @*New Inspection Button*@
        <MudItem Class="no-vertical-padding" xs="12" md="6">
            <div class="inspection-card" @onclick="@(() => Navigation.NavigateTo("/new-inspection-page"))" style="cursor:pointer;">
                <div class="icon-container">
                    <MudIcon Icon="@Icons.Material.Outlined.Add" Size="Size.Large" Class="icon-plus" />
                </div>
                <div class="card-content">
                    <MudText Typo="Typo.subtitle1" Class="card-title">New Inspection</MudText>
                    <MudText Typo="Typo.subtitle2" Class="card-subtitle">Start a new property inspection</MudText>
                </div>
            </div>
        </MudItem>
        @*Scheduled Visits Button*@
        <MudItem Class="no-vertical-padding" xs="12" md="6">
            <div class="scheduled-card" @onclick="@(() => Navigation.NavigateTo("/scheduled-visits"))" style="cursor:pointer;">
                <div class="icon-container">
                    <MudIcon Icon="@Icons.Material.Outlined.CalendarToday" Size="Size.Large" Class="icon-plus" />
                </div>
                <div class="card-content">
                    <MudText Typo="Typo.subtitle1" Class="card-title">Scheduled Visits</MudText>
                    <MudText Typo="Typo.subtitle2" Class="card-subtitle">View upcoming inspections</MudText>
                </div>
            </div>
        </MudItem>
        @*Past Records Button*@
        <MudItem Class="no-vertical-padding" xs="12" md="6">
            <div class="past-records-card">
                <div class="icon-container">
                    <MudIcon Icon="@Icons.Material.Outlined.InsertDriveFile" Size="Size.Large" Class="icon-plus" />
                </div>
                <div class="card-content">
                    <MudText Typo="Typo.subtitle1" Class="card-title">Past Records</MudText>
                    <MudText Typo="Typo.subtitle2" Class="card-subtitle">Access completed inspections</MudText>
                </div>
            </div>
        </MudItem>
        @*Clients Buttons*@
        <MudItem Class="no-vertical-padding" xs="12" md="6">
            <div class="client-card" @onclick="@(() => Navigation.NavigateTo("/clients-section"))" style="cursor:pointer;">
                <div class="icon-container">
                    <MudIcon Icon="@Icons.Material.Outlined.PeopleAlt" Size="Size.Large" Class="icon-plus" />
                </div>
                <div class="card-content">
                    <MudText Typo="Typo.subtitle1" Class="card-title">Clients</MudText>
                    <MudText Typo="Typo.subtitle2" Class="card-subtitle">Manage your client database</MudText>
                </div>
            </div>
        </MudItem>
        @*Q&A Buttons*@
        <MudItem Class="no-vertical-padding" xs="12" md="6">
            <div class="qna-card">
                <div class="icon-container">
                    <MudIcon Icon="@Icons.Material.Outlined.HelpOutline" Size="Size.Large" Class="icon-plus" />
                </div>
                <div class="card-content">
                    <MudText Typo="Typo.subtitle1" Class="card-title">Q&A</MudText>
                    <MudText Typo="Typo.subtitle2" Class="card-subtitle">Get help and find answers</MudText>
                </div>
            </div>
        </MudItem>
        @*Payment Button*@
        <MudItem Class="no-vertical-padding" xs="12" md="6">
            <div class="scheduled-card">
                <div class="icon-container">
                    <MudIcon Icon="@Icons.Material.Outlined.Payment" Size="Size.Large" Class="icon-plus" />
                </div>
                <div class="card-content">
                    <MudText Typo="Typo.subtitle1" Class="card-title">Billing</MudText>
                    <MudText Typo="Typo.subtitle2" Class="card-subtitle">Subcriptions and payments</MudText>
                </div>
            </div>
        </MudItem>
        @*Settings Button*@
        <MudItem Class="no-vertical-padding" xs="12" md="6">
            <div class="setting-card">
                <div class="icon-container">
                    <MudIcon Icon="@Icons.Material.Outlined.Settings" Size="Size.Large" Class="icon-plus" />
                </div>
                <div class="card-content">
                    <MudText Typo="Typo.subtitle1" Class="card-title">Settings</MudText>
                    <MudText Typo="Typo.subtitle2" Class="card-subtitle">Configure app preferences</MudText>
                </div>
            </div>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .title {
        font-weight: 700;
        font-size: 1.8rem;
        line-height: 2rem;
        margin-bottom: 0.5rem;
        margin-top: 3.5rem;
    }
    .subtitle {
        font-weight: 400;
        font-size: 1rem;
        line-height: 1.6rem;
        margin-bottom: 3.5rem;
    }

    .no-vertical-padding {
        padding-top: 0 !important;
        padding-bottom: 0 !important;
    }
    .inspection-card {
        display: flex;
        align-items: center;
        background: #f5fcff;
        border: 1.5px solid #c6d3e3;
        border-radius: 8px;
        padding: 10px 10px;
        transition: background 0.2s, box-shadow 0.2s;
        box-shadow: none;
        cursor: pointer;
        margin-bottom: 16px;
    }

