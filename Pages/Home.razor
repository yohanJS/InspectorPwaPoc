        border-radius: 8px;
        padding: 10px 10px;
        transition: background 0.2s, box-shadow 0.2s;
        box-shadow: none;
        cursor: pointer;
        margin-bottom: 16px;
    }

    .past-records-card:hover {
        background: #e0d6ff;
        box-shadow: 0 2px 8px 0 rgba(80, 120, 200, 0.08);
    }

    .client-card {
        display: flex;
        align-items: center;
        background: #fff4de;
        border: 1.5px solid #fad9b6;
        border-radius: 8px;
        padding: 10px 10px;
        transition: background 0.2s, box-shadow 0.2s;
