        border-radius: 8px;
        padding: 10px 10px;
        transition: background 0.2s, box-shadow 0.2s;
        box-shadow: none;
        cursor: pointer;
        margin-bottom: 16px;
    }

    .setting-card:hover {
            background: #F6F6F6;
        box-shadow: 0 2px 8px 0 rgba(80, 120, 200, 0.08);
    }

    .icon-container {
        background: #fff;
        border-radius: 12px;
        width: 56px;
        height: 56px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 24px;
        box-shadow: 0 1px 4px 0 rgba(80, 120, 200, 0.06);
    }

    .icon-plus {
        color: #2563eb;
        font-size: 1.6rem;
    }

    .card-content {
        display: flex;
        flex-direction: column;
    }

    .card-title {
        font-weight: 700;
        color: #1a202c;
    }

    .card-subtitle {
        color: #4b5563;
        margin-top: 2px;
    }
</style>