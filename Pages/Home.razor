        background: #dbf3fa;
        box-shadow: 0 2px 8px 0 rgba(80, 120, 200, 0.08);
    }

    .scheduled-card {
        display: flex;
        align-items: center;
        background: #eafff2;
        border: 1.5px solid #83e4aa;
        border-radius: 8px;
        padding: 10px 10px;
        transition: background 0.2s, box-shadow 0.2s;
        box-shadow: none;
        cursor: pointer;
        margin-bottom: 16px;
    }

    .scheduled-card:hover {
        background: #daffe7;
        box-shadow: 0 2px 8px 0 rgba(80, 120, 200, 0.08);
    }

    .past-records-card {
        display: flex;
